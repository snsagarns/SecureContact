extends layout

block content
    .containter.text-center
        .jumbotron
            h1.display-4 Thank you!!
            p.lead Your Contact Information has been successfully submitted!
            .my-5 
    
        button.btn.btn-dark(type='button').text-warning               
               p.m-4 Name: #{post.prefix} #{post.firstName} #{post.lastName}
                
                p.m-4 Address: #{post.street}, #{post.city}, #{post.state}, #{post.zip}
                
                p.m-4 Contact by Phone: #{post.contactByPhone}
                
                p.m-4 Contact by Mail: #{post.contactByMail}
                
                p.m-4 Contact by E-mail: #{post.contactByEmail}
                
    script.
        $('#main-nav').append( "<li class = 'nav-item'> <a class = 'nav-link' id = 'login'> Login </li> ")
        $('#login').attr('href', 'login')
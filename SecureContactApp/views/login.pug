extends layout 

block content
    section.vh-100.gradient-custom.align-content-xxl-stretch
    form(action ="/users/login", method = "post")
      .container.py-5.h-100-lg
        .row.d-flex.justify-content-center.align-items-center.h-100
          .col-12.col-md-8.col-lg-6.col-xl-5
            .card.bg-dark.text-white(style='border-radius: 1rem;')
              .card-body.p-5.text-center
                .mb-md-5.mt-md-4.pb-5
                  h2.fw-bold.mb-2.text-uppercase.nav-underline.wh Account log In
                  p.text-white-50.mb-5 Please enter your email and password
                  .form-outline.form-white.mb-4
                    input#typeEmailX.form-control.form-control-lg(type='username', name ="username")
                    label.form-label(for='typeUsername') Email or Username
                  .form-outline.form-white.mb-4
                    input#typePasswordX.form-control.form-control-lg(type='password', name = "password")
                    label.form-label(for='typePasswordX') Password
                  p.small.mb-5.pb-lg-2
                    a.text-white-50(href='/users/login') Refresh the page | Login
                  button.btn.btn-outline-light.btn-lg.px-5(type='submit', value = "submit" ) Login
                  .d-flex.justify-content-center.text-center.mt-4.pt-1
                    a.text-white(href='#!')
                      i.fab.fa-facebook-f.fa-lg
                    a.text-white(href='#!')
                      i.fab.fa-twitter.fa-lg.mx-4.px-2
                    a.text-white(href='#!')
                      i.fab.fa-google.fa-lg
                div
                  p.mb-0
                    |Don'&apos;t have an Account? 
                    a.text-white-50.fw-bold(href='/users/register') Sign Up